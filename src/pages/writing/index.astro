import Layout from '$layout/Base.astro'
const posts = await Astro.glob('./**/*.md')

---
<Layout title="writing" pageOrder={1}>
    <ul class="posts">
        {posts.map(post => (
        <li>
            <a href={post.url}>{ post.frontmatter.title }</a>
        </li>
        ))}
    </ul>
</Layout>